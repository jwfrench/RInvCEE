data = as.data.frame(read.csv(text = x, header = TRUE))
names(data)[1] = "countryName"
if (!is.null(concept)) {
if (concept %in% names(data)) {
data = filter(data, data[[concept]] != "#N/A")
data$isoCode
} else {
data$isoCode
}
} else {
data$isoCode
}
